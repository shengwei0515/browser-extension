{
    "content_scripts": [
        {
            "js": [
                "scripts/content.js"
            ],
            "css": [
                "styles/content.css"
            ],
            "matches": [
                "https://teams.live.com/*",
                "https://teams.microsoft.com/*",
                "https://developer.chrome.com/docs/webstore/*"
            ],
            "runs_on": "document_end"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "images/*",
                "styles/*"
            ],
            "matches": [
                "https://teams.live.com/*",
                "https://teams.microsoft.com/*"
            ]
        }
    ],
    "description": "Add the reading time to Chrome Extension documentation articles",
    "manifest_version": 3,
    "name": "Reading time",
    "permissions": ["tabGroups", "scripting"],
    "version": "1.0",
    "icons": {
        "16": "images/igoose16.png",
        "32": "images/igoose32.png",
        "48": "images/igoose48.png",
        "128": "images/igoose128.png"
    },
    "host_permissions": ["<all_urls>"]
}
